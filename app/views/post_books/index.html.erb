<h1>post_books#index</h1>

<%= form_for(@post_book, url: post_images_path) do |f| %>
  <% if @post_book.errors.any? %>
  <div>
    <h2><%= @post_book.errors.count %>件のエラーが発生しました。</h2>
    <ul>
    <% @post_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div>
    <%= f.attachment_field :user_image %>
  </div>
  <br>
  <div>
    <label>ショップ名</label>
    <%= f.text_field :shop_name, placeholder:"ショップ名"
  </div>
