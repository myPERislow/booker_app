<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label>Name</label>
    <%= f.text_field :name,autofocus:true,placeholder:"名前" %>
  </div>

  <div class="field">
    <label>Email</label>
    <%= f.email_field :email,placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <label>Password</label>
    <%= f.password_field :password,autocomplete:"off",placeholder:"パスワード" %>
  </div>

  <div class="field">
    <label>Password</label>
    <%= f.password_field :password_confirmation,autocomplete:"off",placeholder:"パスワード確認" %>
  </div>

  <%= f.submit"サインアップ" %>
<% end %>

<%= render "devise/shared/links" %>
